@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,600,700');
* {
  box-sizing: border-box;
}
header {
  background: #313234;
  height: 50px;
}
body {
  margin: 0;
  font-family: 'Open Sans', sans-serif;
}
.container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
}
header nav ul {
  margin: 0;
  padding: 0;
  list-style-type: none;
  float: right;
  font-size: 0;
}
.nav:before,
.nav:after {
  content: "";
  display: table;
  clear: both;
}
header nav ul li {
  display: inline-block;
  font-size: 16px;
}
header nav ul li a {
  line-height: 50px;
  padding: 0 20px;
  display: block;
  color: #fff;
  text-decoration: none;
  text-transform: uppercase;
}
header>nav ul>li>a:hover {
  background-color: lightgrey;
}
header>nav img {
  padding: 10px 0;
}
.hero {
  height: calc(100vh - 50px);
}
.hero img {
  width: 100%;
  height: 100%;
}
.slogan>h1 {
  color: rgba(255, 255, 255, 0.5);
  max-width: 800px;
  text-align: right;
}
.slogan {
  float: right;
  border: 2px solid black;
  border-style: none;
  background-color: rgba(0, 0, 0, 0.2);
  width: 400px;
  transform: scale(1.5,1.5);
  transform: translate(0px,-300px);
}

.row:before,
.row:after {
  content: "";
  display: table;
  clear: both;
}
[class*="col-"] {
  float: left;
  min-height: 1px;
  padding: 0 15px;
}
.col-1 {width: 8.33%;}
.col-2 {width: 16.66%;}
.col-3 {width: 25%;}
.col-4 {width: 33.33%;}
.col-5 {width: 41.66%;}
.col-6 {width: 50%;}
.col-7 {width: 58.33%;}
.col-8 {width: 66.66%;}
.col-9 {width: 75%;}
.col-10 {width: 83.33%;}
.col-11 {width: 91.66%;}
.col-12 {width: 100%;}

.col-offset-0 {margin-left: 0;}
.col-offset-1 {margin-left: 8.33%;}
.col-offset-2 {margin-left: 16.66%;}
.col-offset-3 {margin-left: 25%;}
.col-offset-4 {margin-left: 33.33%;}
.col-offset-5 {margin-left: 41.66%;}
.col-offset-6 {margin-left: 50%;}
.col-offset-7 {margin-left: 58.33%;}
.col-offset-8 {margin-left: 66.66%;}
.col-offset-9 {margin-left: 75%;}
.col-offset-10 {margin-left: 83.33%;}
.col-offset-11 {margin-left: 91.66%;}

section>.container{
  margin: 50px auto;
}
.benefits i {
  width: 100px;
  height: 100px;
  border: 0;
  border-radius: 10%;
  background: lightblue;
  text-align: center;
  display: inline-block;
}  
.benefits .fa {
  font-size: 50px;
  line-height: 100px;
}
.benefits [class*="col-"] {
  text-align: center;
}
.benefits .fa:hover {
  background: black;
  color: white;
}  
.sro {
  text-align: center;
}
.klasa1 {
  text-align: center;
}
.klasa1>h1 {
  text-transform: uppercase;
  font-size: 50px;
}
.galeria [class*="col-"] {
  padding: 0;
  position: relative;
  font-size: 0;
}
.galeria .layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: .8s;
  text-align: center;
}
.galeria .layer .fa {
  line-height: 200px; 
}
.galeria img {
  max-width: 100%;
  height: 200px;
}
.galeria [class*="col-"]:hover .layer {
  background-color: rgba(0, 0, 0, .5);
}
.galeria [class*="col-"]:hover .layer .fa {
  opacity: 1;
}
.galeria i {
  color: #7FFFD4;
  display: inline-block;
  margin: 0 10px;
  opacity: 0;
  transition: .8s;
  font-size: 28px;
}

.frames {
  border: 0;
  height: 200px;
  width: 200px;
  margin: 50px 0px 150px 0px;
  border-radius: 50%;
